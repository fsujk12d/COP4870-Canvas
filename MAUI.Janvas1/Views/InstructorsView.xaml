<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Janvas1.Views.InstructorsView"
             Title="InstructorsView">
    <VerticalStackLayout>
        <Label 
            Text="Instructors!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Courses" Clicked="CoursesClicked"/>
        <Button Text="Assignments" Clicked="AssignmentsClicked"/>
        <Button Text="Students" Clicked="StudentsClicked"/>
        <Button Text="Modules" Clicked="ModulesClicked"/>
        <Button Text="Content Items" Clicked="ContentClicked"/>
        <Button Text="Grade Student Submissions" Clicked="GradeClicked"/>
        <Button Text="Back" Clicked="BackClicked"/>
    </VerticalStackLayout>
</ContentPage>